@page "/Account/login"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
<div class="form-container">
    <h3>TodoApp</h3>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                   <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder = "Enter Email"/>
                     <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder = "Enter Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <button id="login-submit" type="submit" class="btn">Log in</button>
                    <p>
                     Don't have an account?<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register Here</a>
                    </p>
            </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</body>
</html>

